{{>menu}}
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1 class="fs-1 mb-5"><i class="fa-solid fa-boxes-packing"></i> Productos</h1>  
        </div>
        <!-- Button trigger modal -->
        <div class="col-6">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <i class="fa-solid fa-cart-arrow-down"></i> Ver Carrito
            </button>
        </div>
        
    </div>
</div>

<div class="container">
    <div class="row">
        {{#each productos}}
            {{> producto
                frutVerd = this
            }}
        {{/each}}
    </div>
</div>

{{#if fruVerduras}}
    {{> productoBuscar
        buscarProducto = fruVerduras
    }}
{{/if}}